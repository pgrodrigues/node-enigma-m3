{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "paths": {
      "*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "coverage", "dist", "docs"],
  "include": ["src/**/*.ts"],
  "typedocOptions": {
    "entryPoints": ["src/**/*.ts"],
    "out": "docs"
  }
}
