{
  "name": "node-enigma-m3",
  "version": "1.0.0",
  "description": "Enigma M3 simulator",
  "author": "Pedro Rodrigues",
  "license": "MIT",
  "main": "dist/enigma.js",
  "types": "dist/enigma.d.ts",
  "exports": {
    ".": {
      "import": "./dist/enigma.js",
      "require": "./dist/enigma.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/pgrodrigues/node-enigma-m3.git"
  },
  "keywords": [
    "nodejs",
    "enigma",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "docs": "typedoc",
    "format": "prettier . --write",
    "lint:fix": "eslint --fix",
    "lint": "eslint",
    "prepare": "npm run build",
    "test": "jest",
    "ts": "tsc --noEmit"
  },
  "engines": {
    "node": "24.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
